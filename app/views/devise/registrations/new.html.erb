<div class='back-ground'>
<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Sign Up</h2>
      <h5>新規アカウントの作成</h5>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: @user, url: user_registration_path, local: true do |f|%>
        <%= devise_error_messages!%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :nickname %>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname, autofocus: true, placeholder: "sample" %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email, placeholder:"sample@sample.com" %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password %>
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off", placeholder:"英数字含めて6文字以上にしてください" %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation %>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"上記と同じパスワードを入力してください" %>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Sign Up", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
